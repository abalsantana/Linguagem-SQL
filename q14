<?php
/*14. Escrever um algoritmo que leia dois valores inteiro distintos e informe qual é o maior.*/


$num1 = readline("Informe um numero 1: ");
$num2 = readline("Informe um numero 2: ");
$maior = $num1;

//função mostra o maior
function infMaior($num1, $num2){
	global $maior;
	if($num2 > $maior){
		return $num2;
}else {
	return $num1;
}

}

 $maior = infMaior($num1, $num2);

	echo "Maior é: $maior";

echo "\n------------------------------\n";

?>