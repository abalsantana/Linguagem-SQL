<?php
/*26. Faça um algoritmo que leia um número de 1 a 5 e escreva por extenso. Caso o usuário digite um número que não
esteja neste intervalo, exibir mensagem: número inválido.*/

$num = readLine("\nDigite um número ou zero(0) para sair. ");
	switch ($num){
		case 1:
			echo "Um";
			break;
		case 2:
			echo "Dois";
			break;
		case 3:
			echo "Três";
			break;
		case 4:
			echo "Quatro";
			break;
		case 5:
			echo "Cinco";
			break;
		default: 
			echo "Digite um número > 1 e < 5.";
			break;
	}

echo"\nFIM";
















