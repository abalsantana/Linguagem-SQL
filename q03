<?php
/*3. Escrever um algoritmo para determinar o consumo médio de um automóvel sendo fornecida a distância total
percorrida pelo automóvel e o total de combustível gasto.*/


$tComb = readline("Informe o consumo do combustível em Litros: ");
$dist = readline("Informe a distância percorrida em Km: ");

//função calcula consumo médio de combustível
function calculaConsumoMedio($tComb, $dist){
	 return $dist / $tComb;
}

$cMedio = calculaConsumoMedio($tComb, $dist);

echo "Consumo Médio:  $cMedio km/l";

echo "\n------------------------------\n";

?>